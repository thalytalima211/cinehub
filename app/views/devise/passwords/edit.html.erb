<section id="change-password" class="bg-gray-800 w-full md:w-3/4 mx-auto rounded-md p-8 shadow-md my-8">
  <h2 class="text-3xl font-bold text-center text-sky-400 mb-6"><%= t('devise.change_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="flex flex-col mb-4">
      <%= f.label :password, t('devise.change_password_fields.new_password'), class: "text-gray-200 font-medium mb-1" %>
      <% if @minimum_password_length %>
        <em class="text-gray-400 text-sm mb-1">(<%= @minimum_password_length %> <%= t('devise.registrations.minimum_characters')%>)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
            class: "p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-sky-400" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password_confirmation, t('devise.change_password_fields.password_confirmation'), class: "text-gray-200 font-medium mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-sky-400" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit t('devise.change_password'),
            class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-bold py-3 px-6 rounded-md transition-colors duration-200 shadow-md hover:shadow-lg" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-gray-300">
    <%= render "devise/shared/links" %>
  </div>
</section>
