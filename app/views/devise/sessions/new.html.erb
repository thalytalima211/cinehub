<section id='new-session' class="bg-gray-800 w-3/4 mx-auto rounded-md p-8 shadow-md my-8">
  <h2 class="text-3xl font-bold text-center text-sky-400 mb-6"><%= t('actions.login_message') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="flex flex-col mb-4">
      <%= f.label :email, class: "text-gray-200 font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-sky-400" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password, class: "text-gray-200 font-medium mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password",
            class: "p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-sky-400" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center mb-4">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-sky-500 focus:ring-sky-400 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-gray-200" %>
      </div>
    <% end %>

    <div class="flex justify-center">
      <%= f.submit t('actions.login'), class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-bold py-3 px-6 rounded-md transition-colors duration-200 shadow-md hover:shadow-lg" %>
    </div>

  <% end %>

  <div class="mt-6 text-center text-gray-300">
    <%= render "devise/shared/links" %>
  </div>
</section>
