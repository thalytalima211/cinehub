<section class="bg-gray-800 w-full md:w-3/4 mx-auto rounded-md p-8 shadow-md my-8">
  <h2 class="text-3xl font-bold text-center text-sky-400 mb-6">
    <%= t('devise.sign_up') %>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col mb-4">
      <%= f.label :name, User.human_attribute_name(:name), class: "text-gray-200 font-medium mb-1" %>
      <%= f.text_field :name,
            class: "p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-sky-400" %>
      <% if resource.errors[:name].any? %>
        <p class="text-sm text-red-500 mt-1"><%= f.object.errors.full_messages_for(:name).join(', ') %></p>
      <% end %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :email, class: "text-gray-200 font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-sky-400" %>
      <% if resource.errors[:email].any? %>
        <p class="text-sm text-red-500 mt-1"><%= f.object.errors.full_messages_for(:email).join(', ') %></p>
      <% end %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password, class: "text-gray-200 font-medium mb-1" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-400 mb-1">
          (<%= @minimum_password_length %> <%= t('devise.registrations.minimum_characters') %>)
        </em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
            class: "p-3 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-sky-400" %>
      <% if resource.errors[:password].any? %>
        <p class="text-sm text-red-500 mt-1"><%= f.object.errors.full_messages_for(:password).join(', ') %></p>
      <% end %>
    </div>

    <div class="flex flex-col mb-6">
      <%= f.label :password_confirmation, class: "text-gray-200 font-medium mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "p-3 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-sky-400" %>
      <% if resource.errors[:password_confirmation].any? %>
        <p class="text-sm text-red-500 mt-1"><%= f.object.errors.full_messages_for(:password_confirmation).join(', ') %></p>
      <% end %>
    </div>

    <div class="flex justify-center">
      <%= f.submit t('actions.sign_up'),
            class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-bold py-3 px-6 rounded-md transition-transform transform hover:-translate-y-0.5 hover:shadow-lg duration-200" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-gray-300">
    <%= render "devise/shared/links" %>
  </div>
</section>
