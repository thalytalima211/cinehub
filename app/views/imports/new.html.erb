<section class="flex flex-col w-full">
    <%= link_to t('actions.return_homepage'), root_path,
            class: "px-5 py-2 rounded-lg bg-gray-800 w-fit text-white mt-4
                font-medium hover:bg-gray-700 transition-colors duration-300 
                shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>

    <div class="bg-gray-800 w=full md:w-3/4 mx-auto rounded-md p-8 shadow-md mb-8 mt-4">
        <h1 class="text-3xl font-bold text-center text-sky-400 mb-6">
            <%= t('movie_import.new_import') %>
        </h1>

        <%= form_with(model: @import, url: imports_path, local: true, html: { multipart: true, class: "flex flex-col gap-6" }) do |f| %>
        <div class="flex flex-col">
            <%= f.label :file, t('movie_import.select_csv_label'), class: "text-white font-semibold mb-2" %>
            
            <label class="flex items-center justify-between p-3 bg-gray-700 rounded-md cursor-pointer hover:bg-gray-600 transition-colors">
            <span class="text-gray-200"><%= t('movie_import.select_csv') %></span>
            <%= f.file_field :file, accept: '.csv', class: "hidden" %>
            </label>
            <% if f.object.errors[:file].any? %>
                <p class="text-sm text-red-500 mt-1"><%= f.object.errors.full_messages_for(:file).join(', ') %></p>
            <% end %>
            <p class="text-gray-400 text-sm mt-1"><%= t('movie_import.only_csv')%></p>
        </div>

        <%= f.submit t('movie_import.upload'), class: "bg-sky-500 text-white px-6 py-2 rounded-md hover:bg-sky-600 transition-colors w-fit mt-2 font-medium shadow-md hover:shadow-lg" %>
        <% end %>
    </div>
</section>