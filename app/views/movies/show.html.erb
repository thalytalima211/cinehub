<section class="flex flex-col text-white w-full">
    <%= link_to 'Voltar para a página inicial', root_path,
    class: "px-5 py-2 rounded-lg bg-gray-800 w-fit
          font-medium hover:bg-gray-700 transition-colors duration-300 
          shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>

    <div class="mt-4 w-2/3 mx-auto">
        <div class="flex gap-x-4">
            <% if @movie.poster.attached? %>
                <%= image_tag @movie.poster.variant(resize_to_fill: [200, 250]), 
                    alt: @movie.title, class: "w-40 h-full object-cover rounded-md" %>
            <% else %>
                <%= image_tag 'movie_generic.jpg', class: 'w-40 w-[200px] h-[250px] h-full object-cover' %>
            <% end %>

            <div class="flex flex-col justify-center">
                <p class="text-4xl font-bold"><%= @movie.title %></p>
                <p class="text-2xl font-medium"><%= @movie.release_year %></p>
                <p class="text-2xl font-medium"><%= @movie.duration %> minutos</p>
                <div class="text-xl font-medium flex items-center gap-1 text-yellow-300">
                    <i data-lucide="star" class="w-5 h-5"></i>
                    <span><%= @movie.average_rating || 0 %></span>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-2xl font-bold">Sinopse</p>
            <p><%= @movie.description %></p>

            <p class="text-2xl font-bold mt-2">Detalhes Técnicos</p>
            <p><span class="font-medium">Diretor: </span><%= @movie.director.name %></p>
            <p><span class="font-medium">Categoria: </span><%= @movie.category.name %></p>
            <p><span class="font-medium">Tags: </span><%= @movie.tags.any? ? @movie.tags.pluck(:name).join(', ') : 'Nenhuma tag' %></p>
        </div>

        <div class="mt-3 flex flex-col mb-6">
            <p class="text-2xl font-bold">Comentários</p>

            <div class="mt-6 bg-gray-800 p-4 rounded-lg shadow-md">
                <h3 class="text-white font-bold mb-3">Deixe seu comentário</h3>
                <%= form_with(model: [@movie, @comment || Comment.new], local: true, class: "flex flex-col gap-3") do |f| %>
  
                    <% unless user_signed_in? %>
                    <div class="flex flex-col w-full">
                        <%= f.label :username, "Seu nome", class: "text-gray-200 mb-1" %>
                        <%= f.text_field :username, class: "w-full p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-sky-400" %>
                        
                        <% if f.object.errors[:username].any? %>
                        <p class="text-red-400 text-sm mt-1">
                            <%= f.object.errors.full_messages_for(:username).join(', ') %>
                        </p>
                        <% end %>
                    </div>
                    <% end %>

                    <div class="flex flex-col">
                    <%= f.label :content, "Comentário", class: "text-gray-200 mb-1" %>
                    <%= f.text_area :content, rows: 3, class: "w-full p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-sky-400" %>

                    <% if f.object.errors[:content].any? %>
                        <p class="text-red-400 text-sm mt-1">
                        <%= f.object.errors.full_messages_for(:content).join(', ') %>
                        </p>
                    <% end %>
                    </div>

                    <div class="flex flex-col">
                    <%= f.label :rating, "Avaliação", class: "text-gray-200 mb-1" %>
                    <%= f.select :rating, options_for_select(1..5), {}, class: "p-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-sky-400" %>
                    </div>

                    <%= f.submit "Enviar", class: "mt-2 bg-sky-500 hover:bg-sky-600 text-white font-bold py-2 px-4 rounded-md transition-colors duration-200" %>

                    <% end %>

            </div>

            <% if @comments.present? %>
                <div id="comments" class="flex flex-col gap-4 mt-2">
                <% @comments.each do |comment| %>
                    <div class="flex items-start gap-3 bg-gray-800 p-3 rounded-lg shadow-md">
                        <% if comment.user.present? && comment.user.profile_picture.attached? %>
                            <%= image_tag comment.user.profile_picture.variant(resize_to_fill: [50, 50]),
                                alt: comment.user.name,
                                class: "w-[50px] h-[50px] rounded-full object-cover" %>
                        <% else %>
                            <%= image_tag 'profile_generic.png',
                                class: "w-[50px] h-[50px] rounded-full object-cover" %>
                        <% end %>

                        <div class="flex flex-col">
                            <span class="font-bold text-sky-400">
                            <%= comment.user.present? ? comment.user.name : comment.username %>
                            </span>
                            <span class="text-gray-200"><%= comment.content %></span>

                            <div class="flex mt-1">
                                <% comment.rating.times do %>
                                    <i class="fa-solid fa-star text-yellow-400 mt-1"></i>
                                <% end %>
                                <% (5 - comment.rating).times do %>
                                    <i class="fa-regular fa-star text-gray-500 mt-1"></i>
                                <% end %>
                                <span class="ml-2"><%= comment.rating %></span>
                            </div>
                        </div>
                    </div>
                <% end %>
                </div>

            <% else %>
                <div class="mt-4 p-4 bg-gray-800 rounded-2xl shadow-md text-center font-medium">
                    Nenhum comentário até o momento.
                </div>

            <% end %>
        </div>
    </div>
</section>

<script>
  lucide.createIcons();
</script>