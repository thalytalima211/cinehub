<section class="flex flex-col w-full mt-4">
    <%= link_to t('actions.return_profile_page'), profile_path,
            class: "px-5 py-2 rounded-lg bg-gray-800 w-fit text-white
                font-medium hover:bg-gray-700 transition-colors duration-300 
                shadow-md hover:shadow-lg transform hover:-translate-y-0.5" %>

    <div class="bg-gray-800 w-3/4 mx-auto rounded-md p-8 shadow-md mb-8 mt-4">
        <h1 class="text-3xl font-bold text-center text-sky-400 mb-6">
            <%= t('actions.movie.edit') %>
        </h1>

        <%= render 'form', movie: @movie, directors: @directors, tags: @tags, authors: @authors %>
    </div>
</section>