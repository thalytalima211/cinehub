<turbo-frame id="movies" class="w-full">
    <div class="grid grid-cols-3 gap-x-3 gap-y-5">
    <% @movies.each do |movie| %>
        <div class="flex bg-gray-800 text-white rounded-lg shadow-lg overflow-hidden w-full max-w-3xl h-48 transition-all hover:scale-103 cursor-pointer">
            <%= image_tag movie.poster, alt: movie.title, class: "w-40 h-full object-cover" %>
            <div class="p-4 flex flex-col flex-1">
                <p class="font-bold"><%= movie.title %></p>
                <p>(<%= movie.release_year %>)</p>
            </div>
        </div>
    <% end %>
    </div>

    <div class="flex justify-center mt-6">
        <%#= pagy_nav(@pagy).gsub('<a', '<a class="px-3 py-2 mx-1 rounded bg-gray-200 hover:bg-gray-300 text-sm"') %>
        <%== pagy_nav(@pagy) %>
    </div>
</turbo-frame>
